{% for block in section.blocks %}
  {% case block.type %}
    {% when 'intro-section' %}
      {% include "section--intro" %}

    {% when 'image-slide' %}
      {% include "section-swiper" %}

    {% when 'secondary-section' %}
      {% include "section-secondary" %}

    {% when 'image-text-section' %}
    <section class="image_text" style="background-color: {{ block.settings.bg_color }};">

      <div class="">

        <div class="cols-2">
          <div class="col-md">
            {% if block.settings.image != blank %}
              {% include 'responsive-image' with image: block.settings.image, image_class: "image_text--image ", wrapper_class: "image_text--image-container  float-desktop kitchen ", max_width: 800, max_height: 800 %}
            {% endif %}
          </div>
          <div class="col-md d-flex justify-content-center flex-column">
            <div class="image_text--txt-container">
              {% if block.settings.title != empty %}
                <h2 class="image_text--title">{{ block.settings.title }}</h2>
              {% endif %}

              {% if block.settings.desc != empty %}
                <div class="image_text--desc">
                  {{ block.settings.desc }}
                </div>
              {% endif %}

              <div class="btn-container d-flex align-items-center">

                {% if block.settings.button_link %}
                  <a href="{{ block.settings.button_link }}" {% if block.settings.external %}target="_blank"{% else %} class="button btn-white" {% endif %} aria-label="{{ block.settings.button_label }} Link">
                    {% if block.settings.button_label %}
                      {{ block.settings.button_label }}
                    {% else %}
                      MORE DETAILS
                    {% endif %}
                  </a>
                {% endif %}

                {% if block.settings.button_link_2 %}
                  {% if block.settings.external_2 %}
                    <div class="underlined-link">
                  {% endif %}
                  <a href="{{ block.settings.button_link_2 }}" {% if block.settings.external_2 %}target="_blank"{% else %} class="button btn-white" {% endif %} aria-label="{{ block.settings.button_label_2 }} Link">
             
                      {% if block.settings.button_label_2 %}
                        {{ block.settings.button_label_2 }}
                      {% else %}
                        MORE DETAILS
                      {% endif %}
                 

                  </a>
                  {% if block.settings.external_2 %}
                    </div>
                  {% endif %}

                {% endif %}

              </div>
            </div>



          </div>
        </div>
      </div>
    </section>
  {% endcase %}
{% endfor %}



