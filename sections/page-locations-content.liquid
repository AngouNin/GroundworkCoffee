            "label": "Title"
          },
          {
            "id": "service",
            "type": "text",
            "label": "Service"
          },
          {
            "type": "checkbox",
            "id": "flagship",
            "label": "Flagship",
            "info": "Check if flagship",
            "default": false
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Order Button"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Order Link"
          },
          {
            "type": "richtext",
