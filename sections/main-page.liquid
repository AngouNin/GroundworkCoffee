{% if page.handle contains 'why-organic' %}
  {% section "page-organic-heading" %}
  {% section "page-organic-content" %}
  {% section "product-default-rec" %}
{% elsif page.handle contains 'our-story' %}
  {% section "page-story-heading" %}
  {% section "page-story-content" %}
  {% section "product-default-rec" %}

{% elsif page.handle contains 'faq' %}
  {% section "page-faq-content" %}
{% endif %}

<section class="alternate-page-content">
  <div class="container">
    <h1>{{ page.title }}</h1>
    <div class="rte">
      {{ page.content }}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "main page",
  "settings": [],
  "presets": [
    {
      "name": "Default",
      "category": "Page"
    }
  ]
}
{% endschema %}
