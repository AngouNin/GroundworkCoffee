{% for block in section.blocks %}
  {% case block.type %}

    {% when 'kitchen-section' %}
      {% include "section-branded-content" %}



    {% when 'image-text-section' %}
    <section class="image_text" style="background-color: {{ block.settings.bg_color }};">

      <div class="">

        <div class="cols-2">
          <div class="col-md">
            {% if block.settings.image != blank %}
              {% include 'responsive-image' with image: block.settings.image, image_class: "image_text--image ", wrapper_class: "image_text--image-container  float-desktop", max_width: 800, max_height: 800 %}
            {% endif %}
          </div>
          <div class="col-md d-flex justify-content-center flex-column">
            <div class="image_text--txt-container">
              {% if block.settings.title != empty %}
                <h2 class="image_text--title">{{ block.settings.title }}</h2>
              {% endif %}

              {% if block.settings.desc != empty %}
                <div class="image_text--desc">
                  {{ block.settings.desc }}
                </div>
              {% endif %}

              <div class="btn-container d-flex align-items-center">

                {% if block.settings.button_link %}
                  <a href="{{ block.settings.button_link }}" {% if block.settings.external %}target="_blank"{% else %} class="button btn-white" {% endif %} aria-label="Button Link">
                    {% unless block.settings.external %}
<!--                       <button role="button" aria-label="Learn More About {{ block.settings.title }} Button" type="button" name="button" class="btn-white"> -->
                    {% endunless %}
                      {% if block.settings.button_label %}
                        {{ block.settings.button_label }}
                      {% else %}
                        MORE DETAILS
                      {% endif %}
                    {% unless block.settings.external %}
<!--                       </button> -->
                    {% endunless %}
                  </a>
                {% endif %}

                {% if block.settings.button_link_2 %}
                  {% if block.settings.external_2 %}
                    <div class="underlined-link">
                  {% endif %}
                  <a href="{{ block.settings.button_link_2 }}" {% if block.settings.external_2 %}target="_blank"{% else %} class="button btn-white" {% endif %} aria-label="Button Link">
                    {% unless block.settings.external_2 %}
<!--                       <button role="button" aria-label="Button " type="button" name="button" class="btn-white "> -->
                    {% endunless %}
                      {% if block.settings.button_label_2 %}
                        {{ block.settings.button_label_2 }}
                      {% else %}
                        MORE DETAILS
                      {% endif %}
                    {% unless block.settings.external_2 %}
<!--                       </button> -->
                    {% endunless %}

                  </a>
                  {% if block.settings.external_2 %}
                    </div>
                  {% endif %}

                {% endif %}

              </div>
            </div>



          </div>
        </div>
      </div>
    </section>

  {% endcase %}
{% endfor %}


{% schema %}
  {
    "name": "Locations Content",
    "blocks": [
      {
        "type": "kitchen-section",
        "name": "Branded Content",
        "limit": 1,
        "settings": [
          {
            "id": "title",
            "type": "text",
            "label": "Title"
          },
          {
            "id": "subtitle",
            "type": "text",
            "label": "Subtitle"
          },
          {
            "type": "richtext",
            "id": "desc",
            "label": "Description"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          },
          {
            "type": "color",
            "id": "bg_color",
            "label": "Background Color",
            "default": "#E2D9BE"
          }
        ]
      },
      {
        "type": "image-text-section",
        "name": "Catering",
        "limit": 1,
        "settings": [
          {
            "id": "title",
            "type": "text",
            "label": "Title"
          },
          {
            "type": "richtext",
            "id": "desc",
            "label": "Description"
          },
          {
            "type": "text",
            "id": "button_label",
            "label": "Button label"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          },
          {
            "type": "checkbox",
            "id": "external",
            "label": "External Link",
            "info": "If checked, this will show as a link",
            "default": false
          },
          {
            "type": "text",
            "id": "button_label_2",
            "label": "Button label 2"
          },
          {
            "type": "url",
            "id": "button_link_2",
            "label": "Button link 2"
          },
          {
            "type": "checkbox",
            "id": "external_2",
            "label": "External Link",
            "info": "If checked, this will show as a link",
            "default": false
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "color",
            "id": "bg_color",
            "label": "Background Color",
            "default": "#E2D9BE"
          }
        ]
      }

    ]
  }
{% endschema %}
