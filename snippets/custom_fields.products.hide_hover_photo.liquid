{% if product.metafields.custom_fields["hide_hover_photo"] != blank %}
  <div class="custom-field custom-field__hide-hover-photo custom-field__type--checkbox">
    <h3 class="custom-field--title">Hide hover photo</h3>
    <div class="custom-field--value">
      {% if product.metafields.custom_fields["hide_hover_photo"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}