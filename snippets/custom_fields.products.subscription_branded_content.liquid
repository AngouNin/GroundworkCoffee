{% if product.metafields.custom_fields["subscription_branded_content"] != blank %}
  <div class="custom-field custom-field__subscription-branded-content custom-field__type--field-collection-json">
    <h3 class="custom-field--title">Subscription Branded Content</h3>
    <div class="custom-field--value">
      {% for item in product.metafields.custom_fields["subscription_branded_content"] %}
        <div class="fc-item fc-index--{{ forloop.index0 }}">
           {% if item["title"] != blank %}
             <div class="fc-field field__title field-type--text">
               <h4 class="custom-field--title">Title</h4>
               <div class="custom-field--value">
                 {{ item["title"] }}
               </div>
             </div>
           {% endif %}
           {% if item["description"] != blank %}
             <div class="fc-field field__description field-type--html">
               <h4 class="custom-field--title">Description</h4>
               <div class="custom-field--value">
                 {{ item["description"] }}
               </div>
             </div>
           {% endif %}
           {% if item["button"] != blank %}
             <div class="fc-field field__button field-type--link">
               <h4 class="custom-field--title">Button</h4>
               <div class="custom-field--value">
                 {{ item["button"] }}
               </div>
             </div>
           {% endif %}
           {% if item["image"] != blank %}
             <div class="fc-field field__image field-type--image">
               <h4 class="custom-field--title">Image</h4>
               <div class="custom-field--value">
                 {{ item["image"] }}
               </div>
             </div>
           {% endif %}
         </div>
       {% endfor %}
    </div>
  </div>
{% endif %}