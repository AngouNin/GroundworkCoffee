<section class="full_width_swiper">
  <div class="container">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {% if block.settings.image %}
          <div class="lazyload swiper-slide" data-bgset="{% include 'responsive-bg-image', image: block.settings.image %}" alt="{{ block.settings.image.alt }}"></div>
        {% endif %}
        {% if block.settings.image_2 %}
          <div class="lazyload swiper-slide" data-bgset="{% include 'responsive-bg-image', image: block.settings.image_2 %}" alt="{{ block.settings.image_2.alt }}"></div>
        {% endif %}
        {% if block.settings.image_3 %}
          <div class="lazyload swiper-slide" data-bgset="{% include 'responsive-bg-image', image: block.settings.image_3 %}" alt="{{ block.settings.image_3.alt }}"></div>
        {% endif %}
        {% if block.settings.image_4 %}
          <div class="lazyload swiper-slide" data-bgset="{% include 'responsive-bg-image', image: block.settings.image_4 %}" alt="{{ block.settings.image_4.alt }}"></div>
        {% endif %}
        {% if block.settings.image_5 %}
          <div class="lazyload swiper-slide" data-bgset="{% include 'responsive-bg-image', image: block.settings.image_5 %}" alt="{{ block.settings.image_5.alt }}"></div>
        {% endif %}
      </div>
      <!-- If we need pagination -->
      <div class="swiper-pagination"></div>
      <!-- If we need navigation buttons -->
      <!-- If we need navigation buttons -->
      <div class="swiper-button-prev" aria-label="Button Previous">
        {% include "icon-arrow-left" %}
      </div>
      <div class="swiper-button-next" aria-label="Button Next">
        {% include "icon-arrow-right" %}
      </div>
    </div>
  </div>
</section>
