<!-- /snippets/social-sharing.liquid -->
<div class="social-sharing d-flex ">

  {% if settings.share_facebook %}
    <div class="social-box first ">
      <a target="_blank" title="opens in a new window" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
        {% include 'icon-facebook' %}
        <span class="visually-hidden">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
      </a>
    </div>
  {% endif %}

  {% if settings.share_twitter %}
    <div class="social-box middle">
      <a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" title="opens in a new window">
        {% include 'icon-twitter' %}
        <span class="visually-hidden">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
      </a>
    </div>
  {% endif %}

  {% if settings.share_pinterest %}
    <div class="social-box">
      <a target="_blank" title="opens in a new window" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}">
        {% include 'icon-pinterest' %}
        <span class="visually-hidden">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
      </a>
    </div>
  {% endif %}

</div>
