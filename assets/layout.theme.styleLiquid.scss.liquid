.sell-sheet {
    padding: 2.5rem 0;
 }

 .sell-sheet__ul {
    padding: 0 0 3rem;
    list-style: none;
 }

 .sell-sheet__li {
    margin: 0 10px;
    text-transform: uppercase;
    font-size: 1.4rem;
    font-family: GT Pressura,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica Neue,Arial,Noto Sans,sans-serif;
    letter-spacing: .1em;
    line-height: 29px;
    font-weight: 700;
    cursor: pointer;
 }

 .sell-sheet__li a {
    text-transform: uppercase;
    font-size: 1.4rem;
    font-family: GT Pressura,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Helvetica Neue,Arial,Noto Sans,sans-serif;
    letter-spacing: .1em;
    line-height: 29px;
    font-weight: 700;
 }

 .sell-sheet__li.active  {
    position: relative;
    max-width: -webkit-max-content;
    max-width: -moz-max-content;
    max-width: max-content;
 }

 .sell-sheet__li.active:before   {
    position: absolute;
    content: '';
    height: 2px;
    /* adjust this to move up and down. you may have to adjust the line height of the paragraph if you move it down a lot. */
    bottom: 2px;
    /* center - (optional) use with adjusting width   */
    margin: 0 auto;
    left: 0;
    right: 0;
    width: 100%;
    background: #efbb52;

    /* optional animation */
    transition:.2s;
 }

